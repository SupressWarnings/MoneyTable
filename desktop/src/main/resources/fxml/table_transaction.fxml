<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox fx:id="hbox" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">

    <Label fx:id="name" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="200.0" text="Name" >
        <HBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </HBox.margin>
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <Label fx:id="amount" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="128.0" text="Amount">
        <font>
            <Font size="24.0" />
        </font>
        <HBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </HBox.margin>
    </Label>
    <Label fx:id="date" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="128.0" text="Date">
        <font>
            <Font size="24.0" />
        </font>
        <HBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </HBox.margin>
    </Label>
    <Button fx:id="details" mnemonicParsing="false" text="Details" visible="false">
        <HBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </HBox.margin>
        <font>
            <Font size="18.0" />
        </font>
    </Button>
</HBox>
