<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.supresswarnings.moneytable.desktop.ui.BaseSceneController">
   <center>
      <StackPane fx:id="centerPane" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#createTransaction" text="Create New">
               <FlowPane.margin>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </FlowPane.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" text="Change Balance">
               <font>
                  <Font size="24.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" text="Statistics">
               <font>
                  <Font size="24.0" />
               </font>
               <FlowPane.margin>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" text="Sort">
               <FlowPane.margin>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </FlowPane.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
   </right>
   <left>
      <fx:include fx:id="accountInfo" source="account_info.fxml" />
   </left>
</BorderPane>
