<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.supresswarnings.moneytable.desktop.ui.TransactionController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <Label text="Name:">
      <font>
         <Font size="24.0" />
      </font>
      <GridPane.margin>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </GridPane.margin>
   </Label>
   <Label text="Amount:" GridPane.rowIndex="1">
      <font>
         <Font size="24.0" />
      </font>
      <GridPane.margin>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </GridPane.margin>
   </Label>
   <Label fx:id="nameLabel" prefWidth="200.0" GridPane.columnIndex="1">
      <font>
         <Font size="24.0" />
      </font>
      <GridPane.margin>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </GridPane.margin>
   </Label>
   <Label fx:id="amountLabel" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <font>
         <Font size="24.0" />
