   </Button>
   <Label text="Date:" GridPane.rowIndex="2">
      <font>
         <Font size="24.0" />
      </font>
      <GridPane.margin>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </GridPane.margin>
   </Label>
   <Label fx:id="dateLabel" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </GridPane.margin>
      <font>
         <Font size="24.0" />
      </font>
   </Label>
   <Button mnemonicParsing="false" onAction="#returnToList" text="Back" GridPane.halignment="CENTER" GridPane.rowIndex="3">
      <font>
         <Font size="24.0" />
      </font>
   </Button>
