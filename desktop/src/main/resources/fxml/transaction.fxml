      <GridPane.margin>
         <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
      </GridPane.margin>
   </Label>
   <Button mnemonicParsing="false" onAction="#onClickEdit" text="Edit" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
